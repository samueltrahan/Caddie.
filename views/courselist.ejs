<%- include('./partials/base') %>

<h1 class="header"><strong>My Courses</strong></h1>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Best Score</th>
        </tr>
    </thead>
    <tbody>
        <% courses.forEach(function(course) { %>
        <tr>
            <td><%=course.name %></td>
            <td><%=course.bestScore %></td>
            <td>
                <form action="/courses/<%= course.id %>/show" method="GET">
                    <button type="submit" value="<%= JSON.stringify({courseId: course.id, user: user}) %>"
                        name="courseDetails">Details</button>
                </form>
            </td>
            <td>
                <form action="/courses/<%= course.id%>?_method=DELETE" method="POST">
                    <button type="submit">X</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>

<%- include('./partials/footer') %>