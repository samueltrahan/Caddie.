<h2 id="reviews-heading">Reviews</h2>
<form id="add-review-form" method="POST" action="/courses/<%= course %>/reviews">
    <label>Review:</label>
    <textarea id="review-area" name="content"></textarea>
    <label>Rating:</label>
    <select name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <button type="submit" value="<%= JSON.stringify({details, course}) %>" name="detailsAndCourse">Add Review</button>
</form>

<% if(courses.reviews) { %>
<table>
    <% courses.reviews.forEach(function(review) { %>
    <tr>
        <td><%=review.content %></td>
        <td><%=review.rating %></td>
        <td><%=review.createdAt.toLocaleDateString() %></td>
    </tr>
    <% }) %>
</table>
<%} else { %>
<h5>No Comments Yet</h5>
<% } %>